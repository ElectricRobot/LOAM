<launch>
 
  <arg name="bag_filename" default="$(find loam_velodyne)/bag/outdoor.bag" />
  <arg name="bag_rate" default="1" />

  <node pkg="loam_velodyne" type="c16_scanRegistration" name="scanRegistration" output="screen"/>
  <node pkg="loam_velodyne" type="c16_laserOdometry" name="laserOdometry" output="screen" respawn="true"/>
  <node pkg="loam_velodyne" type="c16_laserMapping" name="laserMapping" output="screen"/>
  <node pkg="loam_velodyne" type="c16_transformMaintenance" name="transformMaintenance" output="screen"/>
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find loam_velodyne)/config/loam_velodyne.rviz" />

  <node name="playbag" pkg="rosbag" type="play"
      args="-r $(arg bag_rate) $(arg bag_filename) /lslidar_point_cloud:=/velodyne_points "/>

</launch>
